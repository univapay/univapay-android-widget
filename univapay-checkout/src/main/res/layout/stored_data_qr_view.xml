<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/stored_data_qr_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/stored_data_qr_messsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/checkout_actionbutton_smalltext"
        app:layout_constraintEnd_toEndOf="@id/stored_data_qr_display"
        app:layout_constraintStart_toStartOf="@id/stored_data_qr_display"
        app:layout_constraintTop_toBottomOf="@+id/stored_data_qr_display"
        />


</android.support.constraint.ConstraintLayout>
