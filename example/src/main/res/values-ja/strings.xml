    <!--Main demo screen-->
    <string name="demo_title">
        <b>Try the UnivaPay Checkout Widget\n\n</b>
    </string>

    <string name="demo_message">
        This demo will help you understand all the possible settings available for the UnivaPay Checkout widget.\n\n
        First, you\'ll need to go to your \"UnivaPay Merchant Console\", create a merchant account and create a TEST MODE application JWT.\n\n
        Tap on the \"Configure\" button to set up your widget, then tap on \"Checkout\" to display the widget using the configuration you provided.
    </string>
    <string name="demo_configure_button">Configuration</string>
    <string name="demo_checkout_button">Checkout</string>

